<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: { controller: 'users', action: 'easy_create'} do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.fields_for :phone_number do |builder| %>
        <%= builder.label :phone_number %>
        <%= builder.text_field :phone_number, class: 'form-control' %>
      <% end %>

      <%= f.label :blood_group %>
      <%= f.select :blood_group, User.valid_blood_groups, prompt: "Select",
          required: true, placeholder: 'Blood Group', class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation , class: 'form-control'%>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
