<div class="row">
		<div class ="col-xs-2 home-right">
			<ul class ='list-group'>
				<div class='media'>
				<li class ="list-group-item"><%= current_user.u_id %> </li>
				<li class ="list-group-item"><%= link_to("Edit Profile", '/about') %></li>
				</div>
				<hr>
				<li class ="list-group-item"><%= link_to("Feed", '/home') %></li>
				<li class ="list-group-item"><%= link_to("Events", '/about') %></li>
				<li class ="list-group-item"><%= link_to("Groups", '/groups') %></li>
			</ul>
		</div>
		<div class="col-xs-6">
					<!-- Current USer Post --> 
	    	<div class="cuser-post-top">
	    		<div class="cuser-post-top-left">
	    			<%= link_to("Photo/Video", '/upload') %>
	    		</div>
	    		<div class="cuser-post-top-right">
	    		</div>
	    	</div>
	    	<hr>
	    	<div class="cuser-post-middle">
	    		<div class='media'>
	    			<div class='col-xs-2'>
						<%= image_tag("boy.jpg", class:'cuser-img' ) %>
					</div>
					<div class='col-xs-10'>	
						<%= form_for(:post, :url => {:controller => 'pages', :action => 'post'},method: "post", :html => {:class =>'cuser-post-form'}) do |f| %>
					    <%= f.text_field :content ,class:"cuser-post-textarea",placeholder:"Today's Thought" %>
				    </div>
	    		</div>
	  		</div>
	  		<hr>
	  		<div class="cuser-post-top">
	  			<div class="cuser-post-top-right">
	  			<button type="submit" class="btn btn-default">Post</button>
	  			</div>
	  			<% end %>
	  		</div>
			 <!-- All other Users Post -->

			 <% for @p in @posts %>
			 <div class="well well-sm">
			 	<div class="user-post-top">
			 		<%= @p.posted_by_id %>	
			 	</div>
			 	<div class="user-post-middle">
			 		<%= @p.content %>
			 	</div>
			 	<div class="user-post-bottom">
			 		
			 	</div>
			 </div>
			 <% end %>


		</div>
		<div class="col-xs-4">
		<div class="panel panel-default">
			  	<div class="panel-body">
			    	Panel content
			  	</div>
			</div>
		</div>
</div>